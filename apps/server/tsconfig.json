{
  "compilerOptions": {
    "target": "ES2020",                        // Modern JS output
    "module": "commonjs",                      // Node.js compatibility
    "rootDir": "./src",                        // Source code lives in src/
    "outDir": "./dist",                        // Compiled JS goes to dist/
    "strict": true,                            // Enable all strict type checks
    "esModuleInterop": true,                   // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,  // Avoid case-sensitive import bugs
    "skipLibCheck": true                       // Skip type checking of dependencies
  },
  "include": ["src/**/*"],                     // Include all source files
  "exclude": ["node_modules"]                  // Exclude deps
}
